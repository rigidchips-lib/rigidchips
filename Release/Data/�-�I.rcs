function OnFrame()
	out(1,"*-- ŽË“I --*")
	out(2,"‚·‚×‚Ä‚Ìƒ{[ƒ‹‚ðŒ‚‚Ä!")
	count=0
	for i=0 , 3,1 do
		if(_GETHITOBJ(i,"BULLET")>0) then ball[i]= ball[i]+1 end
		if(_GETHITOBJ(i,"CHIP")>0) then ball[i]= ball[i]+1 end
		if(ball[i]>0) then
			_SETOBJCOLOR(i,1,1,1)
			count=count+1
		end
	end
	if( count<4) then time=_STICKS()/30-stime end
	
	out(4,"ŽžŠÔ= ",time," •b ["..count,"/4]")
end

